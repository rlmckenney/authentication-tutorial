{
  "name": "typescript-jwt",
  "version": "0.0.1",
  "description": "A reference implementation of JWT handling in TypeScript",
  "keywords": [
    "TypeScript",
    "JWT",
    "Express",
    "Node.js"
  ],
  "author": "Robert McKenney <robert@mckenney.ca>",
  "license": "MIT",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --enable-source-maps --watch dist/server.js",
    "dev": "pnpm run -r --reporter append-only --loglevel debug \"/dev:/\"",
    "test": "JITI_SOURCE_MAPS=true node --require jiti/register --test src/**/*.test.ts",
    "lint": "eslint src/**/*.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "make:jwt-secret": "node -e \"console.log(require('crypto').randomBytes(32).toString('base64'))\""
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.32.0",
    "drizzle-zod": "^0.5.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.4",
    "uuidv7": "^1.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.11",
    "drizzle-kit": "^0.23.0",
    "eslint": "9.x",
    "globals": "^15.8.0",
    "jiti": "^1.21.6",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1"
  }
}
